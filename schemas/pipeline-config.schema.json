{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://deck-generator.local/schemas/pipeline-config.schema.json",
  "title": "Deck Generator Pipeline Config",
  "type": "object",
  "required": ["project_name", "title", "source_files", "output_root"],
  "properties": {
    "project_name": {
      "type": "string",
      "minLength": 1,
      "pattern": "^[A-Za-z0-9][A-Za-z0-9_-]*$",
      "description": "Used to derive the deck directory name '<project_name>_deck'."
    },
    "title": {
      "type": "string",
      "minLength": 1
    },
    "subtitle": {
      "type": "string",
      "default": ""
    },
    "author": {
      "type": "string",
      "default": ""
    },
    "theme": {
      "type": "string",
      "default": "consulting"
    },
    "audience": {
      "type": "string",
      "enum": ["board", "staff", "parents", "mixed"],
      "default": "mixed"
    },
    "logo_path": {
      "type": "string",
      "description": "Optional absolute or relative path to a logo file."
    },
    "output_root": {
      "type": "string",
      "minLength": 1,
      "description": "Directory where '<project_name>_deck' will be created."
    },
    "analysis_path": {
      "type": "string",
      "description": "Path to analysis.json generated by an LLM using analysis_request.json. Required when running detect/build/export steps."
    },
    "chart_overrides_path": {
      "type": "string",
      "description": "Optional chart-overrides.json path."
    },
    "source_files": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "string",
        "minLength": 1
      }
    },
    "export_formats": {
      "type": "array",
      "items": {
        "type": "string",
        "enum": ["pdf", "pptx", "spa"]
      },
      "default": ["spa"]
    },
    "export_base": {
      "type": "string",
      "pattern": "^/.*/$",
      "default": "/",
      "description": "Base path for static export. Must start and end with '/'."
    },
    "colors": {
      "type": "object",
      "properties": {
        "primary": {
          "type": "string",
          "pattern": "^#[0-9A-Fa-f]{6}$"
        },
        "secondary": {
          "type": "string",
          "pattern": "^#[0-9A-Fa-f]{6}$"
        },
        "accent": {
          "type": "string",
          "pattern": "^#[0-9A-Fa-f]{6}$"
        },
        "background": {
          "type": "string",
          "pattern": "^#[0-9A-Fa-f]{6}$"
        },
        "text": {
          "type": "string",
          "pattern": "^#[0-9A-Fa-f]{6}$"
        },
        "text-light": {
          "type": "string",
          "pattern": "^#[0-9A-Fa-f]{6}$"
        },
        "grid": {
          "type": "string",
          "pattern": "^#[0-9A-Fa-f]{6}$"
        }
      },
      "additionalProperties": false
    },
    "execution": {
      "type": "object",
      "properties": {
        "from_step": {
          "type": "string",
          "enum": ["ingest", "analyze", "detect", "charts", "project", "build", "export", "commit", "cleanup"],
          "default": "ingest"
        },
        "to_step": {
          "type": "string",
          "enum": ["ingest", "analyze", "detect", "charts", "project", "build", "export", "commit", "cleanup"],
          "default": "export"
        },
        "dry_run": {
          "type": "boolean",
          "default": false
        },
        "stop_on_error": {
          "type": "boolean",
          "default": true
        },
        "git_mode": {
          "type": "string",
          "enum": ["manual", "auto", "off"],
          "default": "manual"
        },
        "clean_temp": {
          "type": "boolean",
          "default": false
        },
        "lint": {
          "type": "boolean",
          "default": true
        },
        "lint_strict": {
          "type": "boolean",
          "default": false
        },
        "consulting_lint": {
          "type": "boolean",
          "default": false
        },
        "consulting_lint_strict": {
          "type": "boolean",
          "default": false
        },
        "consulting_lint_threshold": {
          "type": "integer",
          "minimum": 1,
          "maximum": 100,
          "default": 70
        }
      },
      "additionalProperties": false
    }
  },
  "additionalProperties": false
}
