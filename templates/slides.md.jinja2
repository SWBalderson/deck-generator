<style>
.slide-logo {
  position: absolute;
  top: 1.5rem;
  left: 2rem;
  height: 2.5rem;
  width: auto;
  z-index: 10;
}

.slide-title {
  font-family: Georgia, serif;
  font-size: 1.75rem;
  color: #003366;
  margin-bottom: 1.5rem;
  line-height: 1.3;
  font-weight: 600;
}

.slide-grid {
  display: grid;
  grid-template-columns: 1fr 1fr;
  gap: 2rem;
  align-items: start;
  margin-top: 1rem;
}

.slide-text-col {
  padding-right: 1rem;
}

.slide-visual-col {
  display: flex;
  justify-content: center;
  align-items: center;
}
</style>
